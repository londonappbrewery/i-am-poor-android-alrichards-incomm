<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackGround"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <ImageView
        android:id="@+id/coal"
        android:layout_width="285dp"
        android:layout_height="452dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/mainBackGround"
        android:contentDescription="@string/image_description"
        app:srcCompat="@drawable/coal" />

    <TextView
        android:id="@+id/text_i_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/coal"
        android:layout_alignTop="@+id/text_poor"
        android:background="@color/mainBackGround"
        android:text="@string/poorDescript"
        android:textColor="@color/accent"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/text_not"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:text="@string/pDP3"
        android:textColor="@color/secondary"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_poor"
        android:layout_width="154dp"
        android:layout_height="77dp"
        android:layout_above="@+id/coal"
        android:layout_alignParentEnd="true"
        android:text="@string/poor"
        android:textColor="@color/accent"
        android:textSize="50sp" />
</RelativeLayout>
